<script id="data-mapping" type="text/x-handlebars-template">
    <div>
        <div>
            <div style="padding-left: 10px; padding-top: 30px; display:inline-block;">Series Label</div>
            <div style="padding-left: 10px; padding-top: 30px;display:inline-block;"><input type="text"/></div>
        </div>
        [[#each dataColumns]]
        <div>
            <div style="padding-left: 10px; display:inline-block;">[[this]]</div>
            <div style="padding-left: 10px; display:inline-block;">
                <select>
                    [[#each ../columnHeaders]]
                    <option>[[this]]</option>
                    [[/each]]
                </select>
            </div>
        </div>
        [[/each]]
    </div>
</script>

<script id="data-mapping-extension" type="text/x-handlebars-template">
    <div>
        <div id="data-labels" style="padding-top: 20px">
            [[#each dataLabels]]
            <div>
                <div style=" padding-left: 10px; display:inline-block;">[[this]]</div>
                <div style="padding-left: 10px; display:inline-block;"><input type="text"/></div>
            </div>
            [[/each]]
        </div>
        <div>
            <div style="padding-left: 10px; display:inline-block;">Update Interval</div>
            <div style="padding-left: 10px; display:inline-block;"><input type="text" id="refresh-sequence-input"/>
            </div>
        </div>
        <div style="padding-bottom: 10px;">
            <button id="mapping-add-series-btn"
                    style="display: inline-block;color:#07052E;position: relative;right:-20px">+
            </button>
        </div>
    </div>
</script>

